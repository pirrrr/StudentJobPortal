@{
    Layout = "~/Views/Shared/_JobPortalLayout.cshtml";
}

<style>
    :root {
        --primary-color: #fda837;
        --primary-hover: #e89626;
        --secondary-color: #fff6e6;
        --text-color: #333;
        --text-light: #666;
        --border-color: #e0e0e0;
        --border-radius: 12px;
        --box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        --transition: all 0.3s ease;
    }

    .dashboard-container {
        padding: 2rem;
        width: 100%;
        min-height: 100vh;
        background: linear-gradient(135deg, var(--secondary-color) 0%, #fff 100%);
    }

    .content-wrapper {
        max-width: 2000px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .welcome-section {
        background: linear-gradient(90deg, var(--primary-color) 60%, #ffcb7e 100%);
        padding: 3rem;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        color: white;
        position: relative;
        overflow: hidden;
    }

        .welcome-section::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 300px;
            height: 300px;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 70%);
            border-radius: 50%;
        }

        .welcome-section h1 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            font-weight: 700;
            letter-spacing: 1px;
        }

        .welcome-section p {
            font-size: 1.1rem;
            opacity: 0.9;
            max-width: 600px;
        }

    .search-section {
        background-color: white;
        padding: 2rem;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
    }

    .search-bar {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

        .search-bar input {
            flex: 1;
            min-width: 200px;
            padding: 1rem;
            border: 2px solid var(--border-color);
            border-radius: var(--border-radius);
            font-size: 1rem;
            transition: var(--transition);
        }

            .search-bar input:focus {
                border-color: var(--primary-color);
                outline: none;
                box-shadow: 0 0 0 4px rgba(253, 168, 55, 0.15);
            }

        .search-bar button {
            padding: 1rem 2rem;
            background-color: var(--primary-color);
            color: white;
            border: none;
            border-radius: var(--border-radius);
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
        }

            .search-bar button:hover {
                background-color: var(--primary-hover);
                transform: translateY(-2px);
            }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1.5rem;
    }

    .stat-card {
        background-color: white;
        padding: 2rem;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        text-align: left;
        transition: var(--transition);
        border: 1px solid rgba(0,0,0,0.05);
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

        .stat-card h3 {
            color: var(--text-light);
            font-size: 1rem;
            margin-bottom: 0.5rem;
        }

        .stat-card p {
            color: var(--text-color);
            font-size: 2rem;
            font-weight: 700;
            margin: 0;
        }

    .job-categories {
        background-color: white;
        padding: 2rem;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
    }

        .job-categories h2 {
            color: var(--text-color);
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
        }

    .category-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1rem;
    }

    .category-card {
        background-color: var(--secondary-color);
        padding: 1.5rem;
        border-radius: var(--border-radius);
        text-align: center;
        transition: var(--transition);
        cursor: pointer;
    }

        .category-card:hover {
            background-color: var(--primary-color);
            color: white;
            transform: translateY(-3px);
        }

    .recent-jobs {
        background-color: white;
        padding: 2rem;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
    }

        .recent-jobs h2 {
            color: var(--text-color);
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
        }

    .job-list {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
    }

    .job-item {
        padding: 1.5rem;
        border: 1px solid var(--border-color);
        border-radius: var(--border-radius);
        transition: var(--transition);
        cursor: pointer;
    }

        .job-item:hover {
            border-color: var(--primary-color);
            transform: translateX(5px);
        }

        .job-item h3 {
            color: var(--text-color);
            margin: 0 0 0.5rem 0;
        }

        .job-item p {
            color: var(--text-light);
            margin: 0;
        }

    .job-meta {
        display: flex;
        gap: 1rem;
        margin-top: 1rem;
        font-size: 0.9rem;
        color: var(--text-light);
    }

    .application-history {
        background-color: white;
        padding: 2rem;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
    }

        .application-history h2 {
            color: var(--text-color);
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
        }

    .application-list {
        display: grid;
        gap: 1rem;
    }

    .application-item {
        padding: 1.5rem;
        border: 1px solid var(--border-color);
        border-radius: var(--border-radius);
        transition: var(--transition);
        display: grid;
        grid-template-columns: 1fr auto;
        gap: 1rem;
        align-items: center;
    }

        .application-item:hover {
            border-color: var(--primary-color);
            transform: translateX(5px);
        }

    .application-info h3 {
        color: var(--text-color);
        margin: 0 0 0.5rem 0;
    }

    .application-info p {
        color: var(--text-light);
        margin: 0;
    }

    .application-meta {
        display: flex;
        gap: 1rem;
        margin-top: 0.5rem;
        font-size: 0.9rem;
        color: var(--text-light);
    }

    .application-status {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 600;
        text-align: center;
    }

    .status-pending {
        background-color: #fff3cd;
        color: #856404;
    }

    .status-reviewing {
        background-color: #cce5ff;
        color: #004085;
    }

    .status-interview {
        background-color: #d4edda;
        color: #155724;
    }

    .status-rejected {
        background-color: #f8d7da;
        color: #721c24;
    }

    .status-accepted {
        background-color: #d1e7dd;
        color: #0f5132;
    }

    @@media (max-width: 1200px) {
        .stats-grid,
        .category-grid,
        .job-list {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (max-width: 768px) {
        .dashboard-container {
            padding: 1.5rem;
        }

        .welcome-section {
            padding: 2rem;
        }

            .welcome-section h1 {
                font-size: 2rem;
            }

        .search-bar {
            flex-direction: column;
        }

            .search-bar input,
            .search-bar button {
                width: 100%;
            }

        .stats-grid,
        .category-grid,
        .job-list {
            grid-template-columns: 1fr;
        }

        .application-item {
            grid-template-columns: 1fr;
        }

        .application-status {
            width: fit-content;
        }
    }

    /* Modal Styles */
    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1000;
    }

    .modal-content {
        position: relative;
        background-color: white;
        margin: 5% auto;
        padding: 2rem;
        width: 90%;
        max-width: 600px;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
    }

    .close-modal {
        position: absolute;
        right: 1rem;
        top: 1rem;
        font-size: 1.5rem;
        cursor: pointer;
        color: var(--text-light);
    }

    .application-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

        .form-group label {
            font-weight: 600;
            color: var(--text-color);
        }

        .form-group input,
        .form-group textarea {
            padding: 0.8rem;
            border: 2px solid var(--border-color);
            border-radius: var(--border-radius);
            font-size: 1rem;
            transition: var(--transition);
        }

            .form-group input:focus,
            .form-group textarea:focus {
                border-color: var(--primary-color);
                outline: none;
                box-shadow: 0 0 0 4px rgba(253, 168, 55, 0.15);
            }

    .submit-application {
        padding: 1rem 2rem;
        background-color: var(--primary-color);
        color: white;
        border: none;
        border-radius: var(--border-radius);
        font-weight: 600;
        cursor: pointer;
        transition: var(--transition);
        margin-top: 1rem;
    }

        .submit-application:hover {
            background-color: var(--primary-hover);
            transform: translateY(-2px);
        }

    .resume-upload {
        border: 2px dashed var(--border-color);
        padding: 2rem;
        text-align: center;
        border-radius: var(--border-radius);
        cursor: pointer;
        transition: var(--transition);
    }

        .resume-upload:hover {
            border-color: var(--primary-color);
            background-color: var(--secondary-color);
        }
</style>

